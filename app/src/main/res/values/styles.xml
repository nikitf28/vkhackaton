<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="editTextColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="toolbarStyle">@style/ToolBar</item>
        <item name="android:toolbarStyle">@style/ToolBar</item>
        <item name="android:listDivider">@color/lightergray</item>

        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="background">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>
</resources>
